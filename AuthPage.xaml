<Page x:Class="_41_размер_Shennikova.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_41_размер_Shennikova"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
            <RowDefinition Height="auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" ></ColumnDefinition>
            <ColumnDefinition Width="Auto"  ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин"  FontSize="20" Grid.Row="4" Grid.Column="1"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,39,348,0"></TextBlock>
        <TextBlock Text="Пароль"   FontSize="20" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,83,348,0"></TextBlock>

        <StackPanel Name="CaptchaPanel" Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Visibility="Collapsed">
            <TextBlock Text="Введите капчу:" FontWeight="Bold" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="captchaOne" FontSize="22" TextDecorations="Strikethrough"/>  
                <TextBlock Name="captchaTwo" FontSize="22" TextDecorations="Strikethrough" Margin="5,10,0,0"/>
                <TextBlock Name="captchaThree" FontSize="22" TextDecorations="Strikethrough"/>
                <TextBlock Name="captchaFour" FontSize="22" TextDecorations="Strikethrough" Margin="5,10,0,0"/>
            </StackPanel>
            <TextBox Name="CaptchaInput" Width="100" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>


        <TextBox Text="loginDEevd2018"  Name="Login" Grid.Row="4"  Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="322,39,0,42"></TextBox>
        <TextBox Text="GMbcZN" Name="Password" Grid.Row="4" Grid.Column="1"  Width="200" HorizontalAlignment="Left" Margin="322,83,0,-6"></TextBox>

        <Button Name="ButtonLоgin" Content="Войти" Click="ButtonLоgin_Click"  Grid.Column="1" Grid.Row="4" Margin="468,161,0,-81" HorizontalAlignment="Left"></Button>
        <Button Name="Gost" Content="Войти как гость" Click="Gost_Click" Grid.Column="1" Grid.Row="4"  Margin="120,161,0,-81" HorizontalAlignment="Left" />


    </Grid>
</Page>
